{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./build",
		"module": "commonjs",
		"target": "es2017",
		"alwaysStrict": true,
		"noImplicitAny": false,
		"pretty": true,
		"noEmitOnError": true,
		"inlineSourceMap": true,
		"declaration": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}